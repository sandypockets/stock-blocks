{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "env": {
    "node": true,
    "es6": true,
    "browser": true
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "rules": {
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": ["error", { 
      "argsIgnorePattern": "^_",
      "varsIgnorePattern": "^_"
    }],
    "no-console": "warn",
    "no-debugger": "error",
    "no-duplicate-imports": "error",
    "prefer-const": "error",
    "no-var": "error",
    "no-case-declarations": "off"
  },
  "ignorePatterns": ["main.js", "*.config.mjs", "version-bump.mjs"]
}
